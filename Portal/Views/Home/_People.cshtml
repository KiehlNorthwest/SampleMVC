@model Portal.Models.PeopleModel

<div class="container">
    <div class="spinner-border" role="status"></div>
    <span class="sr-only">Loading...</span>
    <div class="row">
        <span> People </span>
    </div>
    <div class="row">
        <div class="col-md">Id</div>
        <div class="col-md">First Name</div>
        <div class="col-md">Middle Name</div>
        <div class="col-md">Last Name</div>
    </div>
    @for (int i = 0; i < Model.People.Count; i++)
    {
        <div class="row">
            <div class="col-md">@Html.DisplayFor(m => m.People[i].Id)</div>
            <div class="col-md">@Html.DisplayFor(m => m.People[i].FirstName)</div>
            <div class="col-md">@Html.DisplayFor(m => m.People[i].MiddleName)</div>
            <div class="col-md">@Html.DisplayFor(m => m.People[i].LastName)</div>
        </div>
    }
</div>
<script>
    window.onload = function (fn) {
        $(["div.spinner-border"]).toggleClass("invisible", "true");
    }
</script>
